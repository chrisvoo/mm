{
  "name": "gateway",
  "version": "1.0.0",
  "description": "API gateway",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint --project tsconfig.json",
    "tsc": "tsc",
    "build": "run-s clean tsc",
    "watch": "tsc --watch",
    "dev": "node -r ts-node/register ./src/index.ts",
    "dev:watch": "nodemon",
    "test": "mocha -r ts-node/register 'tests/**/*.ts'"
  },
  "dependencies": {
    "@fastify/type-provider-typebox": "^2.3.0",
    "@sinclair/typebox": "^0.24.27",
    "ajv": "^8.11.0",
    "ajv-formats": "^2.1.1",
    "dotenv": "^10.0.0",
    "fastify": "^4.4.0",
    "firebase": "^9.9.2",
    "firebase-admin": "^11.0.1",
    "fluent-json-schema": "^3.1.0",
    "pino-pretty": "^8.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "chai": "^4.3.6",
    "eslint": "^8.1.0",
    "eslint-plugin-import": "^2.25.2",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "keywords": [
    "music",
    "mp3"
  ],
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "node_modules",
      ".git"
    ],
    "ext": "ts",
    "exec": "npm run dev"
  },
  "author": "Christian Castelli",
  "license": "MIT"
}
