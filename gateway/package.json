{
  "name": "gateway",
  "version": "1.0.0",
  "description": "API gateway",
  "main": "dist/index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint --project tsconfig.json",
    "tsc": "tsc",
    "build": "run-s clean tsc",
    "watch": "tsc --watch",
    "dev": "node -r ts-node/register ./src/index.ts",
    "dev:watch": "nodemon",
    "test": "mocha"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "fastify": "^3.22.1",
    "graphql": "^16.0.1",
    "graphql-tag": "^2.12.5",
    "joi": "^17.4.2",
    "mercurius": "^8.8.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-plugin-import": "^2.25.2",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "keywords": [
    "music",
    "mp3"
  ],
  "engines": {
    "node": "^10"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "node_modules",
      ".git"
    ],
    "ext": "ts",
    "exec": "npm run dev"
  },
  "author": "Christian Castelli",
  "license": "MIT"
}
